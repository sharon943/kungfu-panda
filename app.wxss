/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 

page{
  width: 100%;height: 100%;
}
.pClass{
  width: 100%;height: 100%;
}





.commodityScreenClass {
    width: 100%;height: 100%;position: fixed;background: #000;opacity: 0.4;overflow: hidden;z-index: 10;color: #fff;top: 0px;right: 0px;bottom: 0px;left: 0px;

}




.toast{
  position: fixed;top: 80%;left: 10%;width: 80%;text-align: center;
}
.toast .content{
  font-size: 14px;color: white;padding: 5px;text-align: center;background: rgba(0, 0, 0, 0.5);
}



.loading{
  position: fixed;height: 40px;border-radius: 3px;background-color: rgba(0, 0, 0, 0.7);width: 80px;margin-left: calc(50% - 40px);top: 45%;
}
.loading text{
  display: block;float: left;width: 100%;line-height: 40px;text-align: center;font-size: 14px;color: white;
}



/*空数据展示样式*/
.gapViewClass{
  width: 100%;height: 100%;
}
.gapViewClass image{
  width: 100px;height: 100px;margin-left: calc(50% - 50px);margin-top: 50%;float: left;
}
.gapViewClass text{
  width: 100%;height: 30px;font-size: 14px;color: #666;text-align: center;line-height: 30px;display: block;float: left;margin-top: 10px;
}
.fix-iphonex-button {
  height:68rpx;
  width: 100%;
  background: #201f18;
}
.fix-iphonex-button::after {
  content: ' ';
  bottom: 0!important;
  height: 68rpx!important;
}