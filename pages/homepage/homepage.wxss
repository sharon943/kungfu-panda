.HeaderViewClass{
  position: absolute;top: 0px;left: 0px;height: 40px;width: 100%;background:rgba(33,30,25,0.5);
}
.HeaderViewClass .imageAdressClass{
  width: 15px;height: 20px;margin-top: 10px;margin-left: 15px;float: left;
}
.HeaderViewClass .textAdressClass{
  display: block;float: left;line-height: 40px;font-size: 14px;margin-left: 10px;color: white;word-break:keep-all;/* 不换行 */
white-space:nowrap;/* 不换行 */overflow:hidden;/* 内容超出宽度时隐藏超出部分的内容 */text-overflow:ellipsis;width: calc(100% - 70px);
}
.HeaderViewClass .imageRightClass{
  width: 12px;height: 12px;float: right;margin-top: 14px;margin-right: 10px;
}





.goodsLibViewClass{
  width: 100%;height: 100px;background: white;float: left;padding-bottom: 5px;padding-top: 5px;
}
.goodsLibViewClass .view1{
  width: 25%;height: 100%;float: left;
}
.goodsLibViewClass .view1 image{
  width: 60px;height: 60px;margin-left: calc(50% - 30px);margin-top: 10px;
}
.goodsLibViewClass .view1 text{
  display: block;float: left;width: 100%;height: 20px;line-height: 20px;font-size: 14px;color: #333;text-align: center;
}



.goodsLibView1Class{
  width: 100%;background: white;padding-bottom: 13px;margin-top: 5px 20px 13px;overflow: hidden;
}
.goodsLibView1Class .view2{
  width: calc(50% - 12px);margin-left: 8px;float: left; margin-top: 8px;
}
