.shopViewClass{
  width: 100%;padding-top: 8px;background: white;
}
.shopViewClass .nameViewClass{
  width: 100%;height: 40px;line-height: 40px;text-align: center;float: left;border-bottom: 1px solid #f0f0f0;
}
.shopViewClass .scrollViewClass{
  width: 100%;float: left;
}
.shopViewClass .scrollViewClass .dataViewClass{
  width: 100%;padding-top: 8px;padding-bottom: 8px;
}
.shopViewClass .scrollViewClass .dataViewClass .image1{
  float: left;width: calc(50% - 40px);padding-left: 15px;padding-right: 15px;padding-top: 10px;padding-bottom: 10px;
}
.shopViewClass .scrollViewClass .dataViewClass .shopNameClass{
  width: calc(50% + 10px);height: 100%;float: left;position: relative;
}
.shopViewClass .scrollViewClass .dataViewClass .shopNameClass .text1{
  display: block;float: left;width: 100%;padding-top: 10px;font-size: 16px;color: #333;line-height: 30px;
}
.shopViewClass .scrollViewClass .dataViewClass .shopNameClass .text2{
  display: block;float: left;width: 100%;font-size: 12px;color: #999;
}
.shopViewClass .scrollViewClass .dataViewClass .shopNameClass .text3{
  display: block;float: left;width: 100%;font-size: 13px;color: #999;bottom: 10px;position: absolute;line-height: 20px;
}
.shopViewClass .scrollViewClass .dataViewClass .shopNameClass .shopFavourable{
  float: left;padding-bottom: 24px;padding-top: 8px;padding-right:10px;

}
.shopViewClass .scrollViewClass .dataViewClass .shopNameClass .shopFavourable .favourable{
  width: 100%;height: 22px;float: left;

}
.shopViewClass .scrollViewClass .dataViewClass .shopNameClass .shopFavourable .favourable image{
  width: 18px;height: 18px;float: left;margin-top: 2px;
}
.shopViewClass .scrollViewClass .dataViewClass .shopNameClass .shopFavourable .favourable text{
  display: block;float: left;line-height: 22px;font-size: 12px;color: #666;margin-left: 5px;width:85%;

}



.notAddress{
  width: 70%;margin-left: 15%;background: white;position: fixed;top: 40%;z-index: 20;
}
.title{
  width: 100%;height: 40px;text-align: center;font-size: 13px;line-height: 40px;display: block;float: left;border-bottom: 1px solid #f2f2f2;
}
.content{
  width: calc(100% - 20px);margin-left: 10px;float: left;padding-top: 5px;padding-bottom: 5px;
}
.content text{
  display: block;float: left;font-size: 13px;color: #666;
}
.confirm{
  width: calc(100% - 20px);margin-left: 10px;height: 35px;text-align: center;font-size: 14px;color: white;display: block;float: left;background: #211e19;line-height: 35px;margin-bottom: 8px;margin-top: 10px;
}
