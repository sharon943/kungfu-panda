/* pages/share/share.wxss */
 @import "../../wxParse/wxParse.wxss"; 
.Pnum{
  display:flex;
  padding:0 18px;
  justify-content:space-between;color:#808080;font-size:26px;
}
.Pnum > view{
  font-weight: bold;
}
.Pnum text{
  font-size:16px;
}
.progress{
  margin-top: 6px;
  
  color:#808080;
}
.cou{
  display:flex;
  justify-content:space-between; 
  color:#808080;
  /* padding-left:18px;  */
  margin-top: 10px;
  position: absolute;
  bottom:15px;
  left:8%;
  width:90%;

}
.hengx{
  position: absolute;top:85px;right: 0;left:0;margin-left:auto;margin-right:auto;width: 90%;
}
.progress{
  margin-bottom: 10px;
}
.quan{
  background: #808080;
  width: 13px;
  height: 13px;
  border-radius: 50%;
  z-index: 8;
  display: block; 
}
 .progress view{
 margin-bottom: 30px;
 text-align: center;
} 
 .progress text{
  margin-bottom: 10px;
  display: block;
} 
.cou text{
  font-size: 14px;
}
.coupon{
  display:flex;
  justify-content:space-between;

}
.coupon1 text{
 display: block;
  margin-top:8px;
  color: #808080;
  font-size: 14px;
}
.coupon1 text:nth-of-type(4){
  margin-top: 2px;
}
.coupon1{
  width:85%;margin:0 auto;box-shadow:0 0 6px rgba(0,0,0,0.2);padding:30px 10px 15px;position:relative;margin-top:30px;
}
.position{
  position:absolute;top:-10px;left:0;right:0;margin-left:auto;margin-right:auto;background:#000;color:#fff;border-radius:20px;width:50%;height:30px;font-size:16px;line-height:30px;text-align:center;
}
.fengexian{
  width:85%;margin:0 auto;padding:10px;display:flex;justify-content: space-between; margin-top: 10px;
}
.fengexian > view{
  width: 35%;
  height: 1px;
  background: #808080;
  margin-top: 10px;
 
}
.profit{
  width: 85%;
  margin: 0 auto;
  padding: 0 18px;
  display: flex;
  justify-content: space-between;
  color:#808080;
}
.profit view{
  width: 30%;
  text-align: center;
}
.profit view text{
  font-size: 16px;
}
.profit view text:nth-of-type(2){
  font-weight: bold;
  color: #000;
}
.share{
  width: 80%;
  margin: 0 auto;
  background: #000;
  color:#fff;
  font-size: 16px;
  text-align: center;
  height:40px;
  line-height: 40px;
  border-radius: 20px;
  margin-bottom: 20px;
  margin-top: 30px;
}
.rule{
  position:fixed;
  top:0;
  bottom:0;
  left:0;
  right:0;
  margin:auto;
  background: #fff;
  color:#000;
  width: 80%;
  height:80%;
  z-index: 99;
  padding: 0 15px;
  overflow: scroll;
}
.profit view text{
  display: block;
}
.inner::-webkit-scrollbar {
    display: none;
}