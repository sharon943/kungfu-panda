/* pages/searchAddress/searchAddress.wxss */
page{
  background: #f2f2f2;
}

.locationAddress{
  width: 100%;height: 40px;background: #d6d1ce;float: left;
}
.locationAddress .address{
  display: block;float: left;font-size: 13px;line-height: 40px;margin-left: 10px;width: calc(100% - 90px);overflow: hidden;text-overflow:ellipsis;white-space: nowrap;
}
.locationAddress .order{
  display: block;float: left;width: 68px;height: 24px;border: 1px solid #b3b3b3;background: #b3b3b3;text-align: center;line-height: 24px;margin-top: 7px;font-size: 11px;color: white;
}

.search{
  float: left;width: calc(100% - 20px);height: 50px;margin-left: 10px;
}
.searchView .icon{
  padding-top: 10px;padding-bottom: 10px;padding-left: 8px;padding-right: 8px;background: white;float: left;
}
.searchView{
  width: calc(100% - 80px);height: 35px;border: 1px solid #f2f2f2;background: white;border-radius: 5px;float: left;
}
.search .searchView input{
  width: calc(100% - 41px);background: white;float: left;line-height: 35px;font-size: 13px;height: 35px;
}
.search .so{
  display: block;float: left;width: 65px;margin-left: 8px;margin-right: 5px;text-align: center;line-height: 35px;background: #221e1a;color: white;font-size: 13px;border-radius: 5px;
}
.foodAddress{
  width: 100%;float: left;
}
.foodAddress .name{
  display: block;float: left;margin-left: 10px;font-size: 14px;color: #333;line-height: 40px;height: 40px;
}
.foodAddress .adressView{
 width: 100%;background: white;height: 40px;float: left;
}
.foodAddress .addressView_{
  width: 100%;background: #aaa;height: 40px;float: left;
}
.foodAddress .adressView .addressName{
  display: block;float: left;width: calc(100% - 30px);margin-left: 10px;background: #e7e3e1;line-height: 39px;font-size: 13px;padding-left: 10px;color: #999;border-bottom: 1px solid #ddd;height: 39px;overflow: hidden;text-overflow:ellipsis;white-space: nowrap;
}





.addressLib{
  position: fixed;top: 85px;width: 100%;background: #f2f2f2;
}
.addressLib .cancel{
  display: block;float: left;line-height: 30px;height: 30px;border-bottom: 1px solid #ccc;font-size: 13px;margin-left: 10px;width: calc(100% - 10px);
}
.lib{
  width: 100%;float: left;
}
.addressLib .address-name{
  display: block;float: left;line-height: 30px;height: 30px;border-bottom: 1px solid #ccc;font-size: 13px;margin-left: 10px;width: calc(100% - 10px);overflow: hidden;text-overflow:ellipsis;white-space: nowrap;
}



.notAddress{
  width: 70%;margin-left: 15%;background: white;position: fixed;top: 40%;z-index: 20;
}
.title{
  width: 100%;height: 40px;text-align: center;font-size: 13px;line-height: 40px;display: block;float: left;border-bottom: 1px solid #f2f2f2;
}
.content{
  width: calc(100% - 20px);margin-left: 10px;float: left;padding-top: 5px;padding-bottom: 5px;
}
.content text{
  display: block;float: left;font-size: 13px;color: #666;
}
.confirm{
  width: calc(100% - 20px);margin-left: 10px;height: 35px;text-align: center;font-size: 14px;color: white;display: block;float: left;background: #211e19;line-height: 35px;margin-bottom: 8px;margin-top: 10px;
}