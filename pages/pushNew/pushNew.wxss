/* pages/pushNew/pushNew.wxss */
@import "../../wxParse/wxParse.wxss"; 
.coupon text{
   display: block;
   color:#979797;
   font-size: 12px;
   margin-bottom: 5px;
}
.coupon > view{
  position:absolute;width:70px;height:25px;top:25%;right:10px;font-size:14px;border-radius:20px;border:1px solid #888;text-align: center;line-height: 25px;
}
.fengexian{
  width:85%;margin:0 auto;padding:10px;display:flex;justify-content: space-between; 
}
.fengexian > view{
  width: 35%;
  height: 1px;
  background: #808080;
  margin-top: 10px;
 
}
.rule{
  position:fixed;
  top:0;
  bottom:0;
  left:0;
  right:0;
  margin:auto;
  background: #fff;
  color:#000;
  width: 80%;
  height:80%;
  z-index: 99;
  box-shadow: 0 0 200px 200px rgba(0,0,0,0.5);
  padding: 0 15px;
  overflow: scroll;
}
.inner::-webkit-scrollbar {
    display: none;
}